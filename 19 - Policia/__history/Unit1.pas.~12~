unit Unit1;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls;

type
  TForm1 = class(TForm)
    Label1: TLabel;
    Edit1: TEdit;
    Button1: TButton;
    Label2: TLabel;
    Label3: TLabel;
    procedure FormCreate(Sender: TObject);
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;
  dtb: textfile;
  spz: string[7];
  pokuta,sumPokuta: integer;
  nasiel: boolean;

implementation

{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
begin
reset(dtb);
nasiel:=false;
sumPokuta:=0;
  repeat
  readln(dtb,spz,pokuta);
  if edit1.text = spz then
    begin
    nasiel:=true;
    label2.caption:='ŠPZ '+edit1.text+' sa v databáze nachádza.';
    label3.caption:='ŠPZ '+edit1.text+' dlží '+inttostr(pokuta)+' €.';
    end
  else
    label2.caption:='ŠPZ '+edit1.text+' sa v databáze nenachádza.';
until eof(dtb) or (nasiel=true);

end;

procedure TForm1.FormCreate(Sender: TObject);
begin
assignfile(dtb,'dtb.txt');
end;

end.
