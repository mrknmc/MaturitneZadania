unit Unit1;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls;

type
  TForm1 = class(TForm)
    Button1: TButton;
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    Label5: TLabel;
    Label6: TLabel;
    procedure Button1Click(Sender: TObject);
    procedure FormCreate(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;
  dtb: textfile;
  stanica: string[3];
  pocet: integer;
  teplota,totalTeploty,pomMax,pomMin,priemTeplota: real;

implementation

{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
begin
reset(dtb);
totalteploty:=0;
pomMax:=0;
pomMin:=0;
pocet:=0;
  repeat
  readln(dtb,stanica,teplota);
  totalteploty:=totalteploty+teplota;
  pocet:=pocet+1;
    if teplota>pomMax then
    pomMax:=teplota;
    if teplota<pomMin then
    pomMin:=teplota;
  until eof(dtb);
priemTeplota:=totalTeploty/pocet;
label4.Caption:=floattostr(pomMax)+'°C';
label5.Caption:=floattostr(pomMin)+'°C';
label6.Caption:=floattostr(priemTeplota)+'°C';
end;

procedure TForm1.FormCreate(Sender: TObject);
begin
assignfile(dtb,'pocasie.txt');
end;

end.
