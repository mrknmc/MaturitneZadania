unit Unit1;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls;

type
  TForm1 = class(TForm)
    Edit1: TEdit;
    Button1: TButton;
    Label1: TLabel;
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;
  retazec,bin,vysledok,finalny: string;
  cislo: integer;

implementation

{$R *.dfm}


procedure TForm1.Button1Click(Sender: TObject);
var
  I: Integer;
begin
vysledok:='';
bin:='';
retazec:=edit1.text;
for I := 1 to length(retazec) do
begin
  cislo:=ord(retazec[i]);
  repeat
    bin:=bin+inttostr(cislo mod 2);
    cislo:=cislo div 2;
  until cislo=0;
  vysledok:=vysledok+bin;
end;
label1.caption:=finalny;
end;

end.
