unit Unit1;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, ComCtrls;

type
  TForm1 = class(TForm)
    Button1: TButton;
    TrackBar1: TTrackBar;
    Label1: TLabel;
    Edit1: TEdit;
    Label2: TLabel;
    Memo1: TMemo;
    Button2: TButton;
    Label3: TLabel;
    procedure FormCreate(Sender: TObject);
    procedure Button1Click(Sender: TObject);
    procedure Button2Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;
  index, hodnota: integer;
  myArray: array [1 .. 20] of integer;
  rovnake: boolean;

implementation

{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
begin
index:=trackbar1.position;
hodnota:=strtoint(edit1.text);
myArray[index]:=myArray[index]+hodnota;
end;

procedure TForm1.Button2Click(Sender: TObject);
var
  I: Integer;
begin
i:=1;
rovnake:=true;
while (rovnake=true) and (i<=19) do
begin
  if myArray[i]<>myArray[i+1] then
    rovnake:=false;
  i:=i+1;
end;
if rovnake=false then
  label3.caption:='Pole nie je konstantne.'
  else
  label3.Caption:='Pole je konstantne.';
end;

procedure TForm1.FormCreate(Sender: TObject);
var
  i: integer;
begin
memo1.clear;
randomize;
for i := 1 to 20 do
begin
  myArray[i]:=9;
  memo1.Lines.append(inttostr(myArray[i]));
end;
end;

end.
